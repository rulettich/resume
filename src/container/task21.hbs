<main>
  {{#with heading}}
    {{#with main}}
      <div class='card'>
        <div class='card-body'>
          <h1>{{title}}</h1>
          <br>
          <p>{{text}}</p>
          <div>
            <button class='btn btn-primary'>Open page</button>
          </div>
          <br />
          <br />
          <div>
            <button class='btn btn-outline-primary'>Add to
              cart</button>
          </div>
        </div>
      </div>
    {{/with}}
    <br />

    <div class='card'>
      <div class='card-body'>
        {{#with second}}
          <h2>{{title}}</h2>
          <br>
          <p>{{text}}</p>
          <div>
            <button class='btn btn-secondary'>Open page</button>
          </div>
          <br />
          <div>
            <button class='btn btn-outline-secondary'>Add to
              cart</button>
          </div>
        {{/with}}
      </div>
    </div>
    <br />
    <div class='card'>
      <div class='card-body'>
        {{#with subblock}}
          <h3>{{title}}</h3>
          <br>
          <p>{{text}}</p>
          <div>
            <button class='btn btn-dark'>Open page</button>
          </div>
          <br />
          <div>
            <button class='btn btn-outline-dark'>Add to cart</button>
          </div>
        {{/with}}
      </div>
    </div>
  {{/with}}
  <br />
  <div class='card'>
    <div class='card-body'>
        
      {{#with nested_display}}
        <div class='display-1'>{{title}}</div>
        <br>
          <div class='card'>
            <div class='card-body'>
        {{#with children_display}}
                <div class="display-4">{{title}}</div>
                <br>
                <p>{{text}}</p>
                <button class='btn btn-warning'>
                   Open
                </button>
              {{/with}}
              </div>
            </div>
            <br>
            <div>
              <h6>{{header_text}}</h6>
           </div>
           <br>
            <div>
              <button class='btn btn-info'>
                 Learn more
              </button>
            </div>
          </div>
       </div>
    {{/with}}
    </div>
  </div>
  <br>
   <div class="card">
     <div class="card-body">
        {{#with paragraph}}
          <p class="text-uppercase">{{title}}</p>
          <br>
          <p class="text-lowercase">{{text}}</p>
          <br>
          <div>
            <a href="https://google.com" class="btn btn-link">
               Open link page
            </a>
          </div>
            <div class="card">
                <div class="card-body">
                    
                      <ul>
                        <li>
                           {{#unless noLine}}
                             {{> link text="Github" href="https://github.com/" noLine=true }}
                             </li>
                             <br>
                             <li>
                              {{> link text="Bootstrap" href='https://getbootstrap.com/' noLine=true }}
                            {{/unless}}
                        </li>
                    </ul>
                </div>
            </div>
        {{/with}}
       </div>
   </div>
</main>