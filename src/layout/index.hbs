  <body>
     {{#with header}}
      <header>
        <div class='col-12'>
          <div class='row'>
           <div class='card'>
            <div class='card-body'>
              {{#with name}}
                 <div class="d-flex justify-content-between">
                  <h4>{{firstname}}
                      {{lastname}}<h4>
                     {{#with title}}
                       <h3 class="text-end">{{page_title}}</h3>
                     {{/with}}
                  </div>   
                {{/with}}
               </div>
            </div>
          </div>
        </div>
      </header>
    {{/with}}

